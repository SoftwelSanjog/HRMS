@model IEnumerable<HRMS.Models.LeaveApplication>

@{
    ViewData["Title"] = "Awaiting Leave Approval";
}

<h1>Awaiting Leave Approval</h1>

<p>
    <a class="btn btn-primary" asp-asp-controller="LeaveApplications" asp-action="Create"><i class="fa fa-plus"></i> Apply Leave</a>
</p>
<div class="card">
    <div class="card-header">
        <h1 class="card-title">Leave Application</h1>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Attachment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusId)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Attachment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.Description)
                        </td>
                        <td>
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend">
                                    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                        Action
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i> Edit</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item">  <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i> Details</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i> Delete</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"><a class="btn btn-warning" asp-action="ApproveLeave" asp-route-id="@item.Id"><i class="fa fa-check"></i> Approve</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"> <a class="btn btn-secondary" asp-action="RejectLeave" asp-route-id="@item.Id"><i class="fa fa-times"></i> Reject</a></li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
