@model HRMS.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Create";
}
<h4>Assign User Roles</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AssignRights">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
                   
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label"></label>
                        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                            <option value="">Select User Roles</option>
                        </select>
                    </div>
                </div>           
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TaskId" class="control-label"></label>
                        <select asp-for="TaskId" class="form-control" asp-items="ViewBag.Tasks">
                            <option value="">Select User Task</option>
                        </select>
                    </div>
                </div>
           </div>       
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Assign Rights</button>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
