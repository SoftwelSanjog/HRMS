@model HRMS.Models.SystemProfile

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SystemProfile</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
               <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
               </div>              
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProfileId" class="control-label"></label>
                        <select asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId">
                            <option value="">Select System Profile</option>
                        </select>
                    </div>
                </div>           
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Order" class="control-label"></label>
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div>
           </div>       
            <div class="form-group">
                <input type="submit" value="Save Profile" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
