@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Applicaton Users";
}

<p>
    <a class="btn btn-primary" asp-asp-controller="LeaveApplications" asp-action="Create"><i class="fa fa-plus"></i> Add New User</a>
</p>
<div class="card">
    <div class="card-header">
        <h1 class="card-title"><b>Users List</b></h1>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       User ID
                    </th>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                       User Name
                    </th>
                    <th>
                       Email
                    </th>
                    <th>
                       Phone Number
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                           <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                               <td>
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend">
                                    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                                        Action
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt"></i> Edit</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item">  <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i> Details</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li class="dropdown-item"><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i> Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
