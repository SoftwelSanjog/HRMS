@model IEnumerable<HRMS.Models.WorkFlowUserGroupMember>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus"></i> Add New User Group Members</a>
</p>
<div class="card">
    <div class="card-header">
        <h1 class="card-title">User Group Member List</h1>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkFlowUserGroup)
                    </th>
                     <th>
                        @Html.DisplayNameFor(model => model.Sender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Approver)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SequenceNo)
                    </th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkFlowUserGroup.Description)
                        </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Sender.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Approver.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SequenceNo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-eye"></i> View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
